<div class="row justify-content-md-center third">
	<form action="/create_url" method="POST" class="form-inline">
  		<input type="text" name="long_url" title="Insert your long url here please" placeholder="Shorten a link" class="form-control form-control-lg">
  		<input type="submit" class="btn btn-default btn-lg btn-warning" value="Submit">
	</form>
</div>
</div>
</div>

<div class="bottom">

<%= @errors if @errors%>

	<br>

	<div class="row justify-content-md-center">
		<div class="col-sm-10">
			<table class="table table-striped table-bordered" align="center">
				<tr>
					<th>No.</th>
					<th>Long URL</th>
					<th>Short URL</th>
					<th>Click Count</th>
				</tr>
			<% Url.all.each do |x| %>
				<tr id="<%= x.id %>">
					<td class="text-center"><%= x.id %> </td>
					<td class="text-center"><%= x.long_url[/www.+/] %></td>
					<td class="text-center"><a href="/<%=x.short_url%>">http://localhost:9393/<%= x.short_url %></a></td>
					<td class="text-center"><%= x.clickcount %></td>
					<td class="text-center"><input type="submit" class="btn btn-default hidebutton" value="Hide" id="<%= x.id %>"></td>
				</tr>
			<% end %>
			</table>
		</div>
	</div>
</div>

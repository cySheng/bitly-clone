

<form action="/create_url" method="POST">
    Enter URL: 
    <input type="text" name="long_url" title="Insert your long url here please" placeholder="URL please" >
    <input type="submit" class="btn btn-default" value="Submit">
 </form>
</div>

<div class="bottom">

<%= @errors %>

<p></p>

<table id="wow" align="center">
	<tr>
		<th>No.</th>
		<th>Long URL</th>
		<th>Short URL</th>
		<th>Click Count</th>
	</tr>
<% Url.all.each do |x| %>
	<tr id="<%= x.id %>">
		<td><%= x.id %> </td>
		<td><%= x.long_url %></td>
		<td><a href="<%=x.long_url%>">http://localhost:9393/<%= x.short_url %></a></td>
		<td><%= x.clickcount %></td>
		<td><input type="submit" class="btn btn-default" value="Submit" id="<%= x.id %>"></td>
	</tr>
<% end %>
</table>
</div>
